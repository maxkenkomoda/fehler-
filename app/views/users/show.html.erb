<div class="row">
  <aside class="col-12">
    <div class="card user-card">
      <div class="card-headder">
        <h3 class="card-title text-center"><%= @user.name %></h3>
      </div>
      <div class="card-body text-center">
        <img class="rounded img-fluid d-block mx-auto" src="<%= gravatar_url(@user, { size: 150 }) %>" alt="">
          <div class="spec">
            <p>年齢:<%= cal_birthday %> 歳</p>
            <p>職業:<%= @user.job %></p>
            <p>性別:<%= gender_system %></p>
          </div>
      </div>
    </div>
  </aside>  
</div>    