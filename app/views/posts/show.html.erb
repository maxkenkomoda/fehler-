<div class='text-center mt-5 border-bottom'>
  <h1><%= @post.title %></h1>
</div>
<div class="text-center">
  <p><%= @post.user.name %>さんによる投稿</p>
</div>

</div>

<div class="row">
  <div class="col-sm-8 offset-sm-2 mb-5">
    <div class="card">
      <div class="card-header text-center">
        <h3>失敗の詳細</h3>
      </div>
      <div class="card-body">
        <p><%= @post.content %></p>
      </div>
    </div>
  </div>
</div>  
<div class="row">
  <div class="col-sm-8 offset-sm-2 mb-2">
    <div class="card">
      <div class="card-header text-center">
        <h3>失敗から学んだこと</h3>
      </div>
      <div class="card-body">
        <p><%= @post.settle %></p>
      </div>
    </div>
  </div>
</div> 
<div class="text-center mb-2">
  <span class="text-muted text-center">posted at <%= @post.created_at %></span>
</div>

<div class="row border-top">
  <% if current_user == @post.user %>
  <%= link_to "この投稿を削除", @post, method: :delete, data: { confirm: "本当によろしいですか？" }, class: "btn btn-danger btn-sm col-sm-2 offset-sm-3 mt-2 mb-5" %>
  <%= link_to "この投稿を編集", edit_post_path(@post), class: "btn btn-info btn-sm col-sm-2 offset-sm-2 mt-2 mb-5" %>
<% end %>


