<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <%= form_with(model: post, local: true) do |f| %> 
     
  
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_area :title, class: 'form-control', placeholder: "最大40文字" %>
      </div>

    
      <div class="form-group">
        <%= f.label :content, '失敗の詳細' %>
        <%= f.text_area :content, class: 'form-control', placeholder: "最大300文字" %>
      </div>
    
      <div class="form-group">
        <%= f.label :settle, 'この失敗から学んだこと' %>
        <%= f.text_area :settle, class: 'form-control', placeholder: "最大300文字" %>
      </div>    
    
      <%= f.submit '投稿する', class: 'btn btn-primary btn-block mb-5' %>

    <% end %>  
    
    
  </div>
</div>